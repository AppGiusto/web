<h1><%= user.name  %></h1>
<h1><%= user.location %></h1>

<div class="row">
	<% @user.posts.each do |post| %>
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-body">
				<p><%= post.message %></p>
			</div>
		</div>
	</div>
	<% end %>
</div>

<div>
	<%= form_tag('/now_following') do %>
	<span class="invisible">
		<%= text_field_tag :follow_id, @user.id %>	
	</span><br/>
	<%= submit_tag 'Follow', class: 'btn btn-primary' %>
	<% end %>
</div>

<p>
	<strong>User:</strong>
		<%= link_to @post.user.name, user_profile_path(id: @post.user.id) %>
</p>