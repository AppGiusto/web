      <label for="Category" class="col-sm-2 control-label">Category</label>
      <div class="col-sm-10">
      <input type="category" class="form-control" id="category" placeholder="Is this a coffee, smoothie, alcoholic drink?" ></br>
    </div>
  </div>

  <div class="form-group">
  	<label for="Drink Image" class="col-sm-2 control-label">Drink Image</label>
  	<div class="col-sm-10">
    <%= f.file_field :image%></br>
  	</div>
  </div>
   
  <div class="actions">
    <%= f.submit %>
  </div>
  </form>
<% end %>
