<%= form_for @drink do |f| %>
  <% if @drink.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@drink.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @drink.errors.full_messages.each do |message| %>
